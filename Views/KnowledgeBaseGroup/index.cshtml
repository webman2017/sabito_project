
@model IEnumerable<MvcMovie.Models.KnowledgeBaseGroup>  
@{
    ViewData["Title"] = "ช่วยเหลือ";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Our Service</title>
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/customs.css">
    <link rel="stylesheet" href="~/css/sidebar.css">
    <link rel="stylesheet" href="~/fonts/stylesheet.css" type="text/css" charset="utf-8" />
  
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="css/splide.min.css">
    <link rel="stylesheet" type="text/css" href="~/slick/slick.css" />
    <script src="https://kit.fontawesome.com/48956afbda.js" crossorigin="anonymous"></script>


</head>
<body>
<div class="wrapper">
  <div class="jumbotron jumbotron-fluid banner-page " style="">
            <img class="" src="~/images/bg-help.png" alt="">
            <div class="container">
                @if(ViewBag.data=="th"){
 <h1 class="display-4">คำถามที่พบบ่อย</h1>
                <p class="lead pd6">FREQUENTLY ASKED QUESTIONS</p>
                }else if(ViewBag.data=="en"){
                     <h1 class="display-4">FREQUENTLY ASKED QUESTIONS</h1>
                <p class="lead pd6">FREQUENTLY ASKED QUESTIONS</p>
                }else if(ViewBag.data=="jp"){
    <h1 class="display-4">よくある質問</h1>
                }
               
            </div>
        </div>

  
        <div class="modal fade" id="modaltool3" tabindex="-1" role="dialog" aria-labelledby="modaltool3Label"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modaltool3Label">คำนวณค่าคอมมิชชั่น</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div role="form" class="form-container cal_detail mt-3">

                            <p>ซื้อ/ขายหุ้น (บาท)</p>
                            <!--<input id="txtBuy" type="text" onchange="calCommision();" oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');this.onchange();" />-->
                            <input id="txtBuy" type="text" class="number"><br><br>

                            <label style="font-size:94.5%">ค่าคอมมิชชั่น *</label><br>
                            <label><span id="lblCom"></span></label><br>


                            <label style="font-size:94.5%">

                                ค่าธรรมเนียมตลาดฯ และ กำกับดูแล (0.007%)
                            </label><br>
                            <label><span id="lblFee"></span></label><br>

                            <label style="font-size:94.5%">
                                <label style="font-size:94.5%">ภาษีมูลค่าเพิ่ม (7%)</label>

                            </label><br>
                            <label><span id="lblTax"></span></label><br>

                            <label><span id="lblSum"></span></label><br>
                            <label><span style="color:red;font-size:94.5%">*ค่าคอมมิชชั่นที่ใช้คำนวณ
                                    เป็นค่าคอมมิชชั่นของบัญชีประเภท Cash Balance และ Credit Balance</span></label>
                            <div class="btn-footer">
                                <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="promotion mb-5">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-md-3 col-sm-3">
                        <section>
                            <ul class="sidebar-menu mt-5 mt-sm-0">
                                @if(ViewBag.data=="th"){
   @foreach (var item in Model) {
                                <li id="know_@item.id">
                                    <a asp-action="Details" asp-route-id="@item.id">
                                        <span>@Html.DisplayFor(modelItem => item.title_th)</span> 
                                    </a>
                                </li>
   }
                                 }else if(ViewBag.data=="en"){
                                        @foreach (var item in Model) {
                                <li>
                                    <a asp-action="Details" asp-route-id="@item.id">
                                        <span>@Html.DisplayFor(modelItem => item.title_en)</span> 
                                    </a>
                                </li>
                                 }
                                 
                                }else if(ViewBag.data=="jp"){
                                       @foreach (var item in Model) {
                                <li>
                                    <a asp-action="Details" asp-route-id="@item.id">
                                        <span>@Html.DisplayFor(modelItem => item.title_jp)</span> 
                                    </a>
                                </li>
                                 }
                                }
                              
                            </ul>
                            <div class="open_sidebar mt-5 d-none d-sm-block">
                                <img src="~/images/open_sidebar.png" alt="">
                            </div>
                        </section>
                    </div>
                    <div class="col-xl-9 col-md-9 col-sm-9">
                        <div class="head_promotion">
                            <h1>Payment Gateway และ ATS คืออะไร</h1>                         
                        </div>

                        <div class="head-help" id="active-help_1">
                            <img class="cir1" src="~/images/circleHelp.png">
                            ความแตกต่างของ Payment Gateway และ ATS
                            <a type="button" onclick="clickPlus(1)" class="btn btn-plus" id="plus_1"></a> 
                        </div>

                        <div class="help">
                        <div class="text-in"><span>คุณสามารถทำการฝากเงินเข้าบัญชีหุ้นได้ทาง</span><br>1) Payment Gateway และ 2) ATS (Automatic Transfer System)</div>  
                            <div class="tb_ATS">
                            <table class="table2 table-striped2" border="0" cellspacing="0" cellpadding="0" style="text-align: center;">
                                <thead>
                                    <tr>
                                        <th>รายละเอียด</th>
                                        <th style="background-color: rgba(0, 0, 0, 0.4);">การฝากเงินด้วยช่องทาง<br>Payment Gateway</th>
                                        <th>การฝากเงินด้วยช่องทาง ATS</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td> ระยะเวลาหักบัญชี</td>
                                        <td>ทันที</td>
                                        <td> ทุกๆ 2 ชั่วโมง</td>
                                    </tr>
                                    <tr>
                                        <td>ยอดเงินฝากขั้นต่ำ</td>
                                        <td>1,000 บาท</td>
                                        <td>5,000 บาท</td>
                                    </tr>
                                    <tr>
                                        <td>ลูกค้าที่เปิดบัญชีแบบ  Cash Balance หรือ Credit Balance</td> 
                                        <td colspan="2">เลือกสมัครช่องทางใดก็ได้ หรือ สมัครทั้ง 2 ช่องทาง (แนะนำ)</td>
                                    </tr>
                                    <tr>
                                        <td> ลูกค้าที่เปิดบัญชีแบบ  Cash Balance หรือ Credit Balance</td>
                                        <td> จะเปิด หรือไม่เปิดใช้บริการ  Payment Gateway ก็ได้</td>
                                        <td> จำเป็น ต้องเปิดใช้บริการ ATS</td>
                                    </tr>
                                </tbody>
                            </table>
                            </div>
                        </div>
                  
                      
                        <div class="head-help" id="active-help_2">
                            <img class="cir1" src="~/images/circleHelp.png">
                            ช่องทางการสมัครบริการ Payment Gateway / ATS
                            <a type="button" onclick="clickPlus(2)" class="btn btn-plus" id="plus_2"></a> 
                        </div>
                        
                        <div class="head-help" id="active-help_3">
                            <img class="cir1" src="~/images/circleHelp.png">
                            วิธีการฝากเงินเข้าพอร์ตผ่านช่องทาง Bill Payment (ชั่วคราว)
                            <a type="button" onclick="clickPlus(3)" class="btn btn-plus" id="plus_3"></a> 
                        </div>

                        </div>
                        
                 
                       
                    </div>
                
                   
                </div>
            </div>
        </div>
        </div>

   

</body>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="js/calculatecommission.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js"
        integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous">
    </script>
