@model MvcMovie.Models.Promotion

@{
    ViewData["Title"] = "Details";
}



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ร่วมงานกับ SBITO</title>
    <link rel="stylesheet" href="~/css/bootstrap.css">
    <link rel="stylesheet" href="~/css/customs.css">
    <link rel="stylesheet" href="~/css/sidebar.css">
    <link rel="stylesheet" href="~/fonts/stylesheet.css" type="text/css" charset="utf-8" />
 
    <link rel="stylesheet" href="~/css//animate.min.css" />
    <link rel="stylesheet" href="~/css/splide.min.css">

    <script src="https://kit.fontawesome.com/48956afbda.js" crossorigin="anonymous"></script>
   <script src="http://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

</head>


<body>
<div class="wrapper">
   <div class="jumbotron jumbotron-fluid banner-page " style="">
            <img class="" src="~/images/banner_mini.png" alt="">
            <div class="container">
                  @if(ViewBag.data=="th"){
                <h1 class="display-4">ข่าวสารและโปรโมชั่น</h1>
                <p class="lead">NEWS AND PROMOTION</p>
                }
                else if (ViewBag.data == "en")
                {
                     <h1 class="display-4">NEWS AND PROMOTION</h1>
                <p class="lead">NEWS AND PROMOTION</p>

                  }else if(ViewBag.data == "jp"){
                       <h1 class="display-4">NEWS AND PROMOTION</h1>
                <p class="lead">NEWS AND PROMOTION</p>
                  }
            </div>
        </div>
  
        <div class="modal fade" id="modaltool3" tabindex="-1" role="dialog" aria-labelledby="modaltool3Label"
            aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modaltool3Label">คำนวณค่าคอมมิชชั่น</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div role="form" class="form-container cal_detail mt-3">

                            <p>ซื้อ/ขายหุ้น (บาท)</p>
                            <!--<input id="txtBuy" type="text" onchange="calCommision();" oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');this.onchange();" />-->
                            <input id="txtBuy" type="text" class="number"><br><br>

                            <label style="font-size:94.5%">ค่าคอมมิชชั่น *</label><br>
                            <label><span id="lblCom"></span></label><br>


                            <label style="font-size:94.5%">

                                ค่าธรรมเนียมตลาดฯ และ กำกับดูแล (0.007%)
                            </label><br>
                            <label><span id="lblFee"></span></label><br>

                            <label style="font-size:94.5%">
                                <label style="font-size:94.5%">ภาษีมูลค่าเพิ่ม (7%)</label>

                            </label><br>
                            <label><span id="lblTax"></span></label><br>

                            <label><span id="lblSum"></span></label><br>
                            <label><span style="color:red;font-size:94.5%">*ค่าคอมมิชชั่นที่ใช้คำนวณ
                                    เป็นค่าคอมมิชชั่นของบัญชีประเภท Cash Balance และ Credit Balance</span></label>
                            <div class="btn-footer">
                                <button type="button" class="btn btn-close" data-dismiss="modal">Close</button>

                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="promotion mb-5">
            <div class="container">
                <div class="row">
                    <div class="col-xl-3 col-md-3 col-sm-3">
                        <section>
                            <ul class="sidebar-menu mt-5 mt-sm-0">

                                <li class="active">
                                     <a asp-controller="News" asp-action="Index">โปรโมชั่น</a>
                                  
                                </li>
                                <li>
                                    <a href="#">
                                        <span>News from SBITO </span> <i class="fa  fa-caret-right pull-right"></i>
                                    </a>
                                    <ul class="sidebar-submenu">
                                        <li><a asp-controller="Announcement" asp-action="Index">ประกาศและข่าวสาร</a></li>
                                        <li><a asp-controller="TurnoverandCaution" asp-action="Index"> Turnover and Caution report</a></li>
                                        <li><a asp-controller="XR" asp-action="Index"> XR / Warrant / Tender</a></li>
                                        <li><a asp-controller="Seminar" asp-action="Index"> สัมมนา</a></li>
                                    </ul>
                                </li>
                                <li>
                                    <a asp-controller="Announcement" asp-action="Index">Stock exchange and
                                        organization </a>
                                </li>
                                <li>
                                       <a asp-controller="PR" asp-action="Index">PR NEWS</a>
                                </li>

                            </ul>
                            <div class="open_sidebar mt-5 d-none d-sm-block">
                                <img src="~/images/open_sidebar.png" alt="">
                            </div>
                        </section>
                    </div>
                    <div class="col-xl-9 col-md-9 col-sm-9">
                        <div class="head_promotion">
                           
                            <h1>
                            @if(ViewBag.data=="th"){
                                @Html.DisplayFor(model => model.title_th)
                            }else if(ViewBag.data=="en"){
                                  @Html.DisplayFor(model => model.title_en)
                            }else if(ViewBag.data=="jp"){
                                  @Html.DisplayFor(model => model.title_jp)
                            }   
                            </h1>
                        </div>
                        <div class="promotion_detail mt-5">
                             @if(ViewBag.data=="th"){
   <img src="@Html.DisplayFor(model => model.image_th)" alt="" class="img-fluid">
                             }else if(ViewBag.data=="en"){
                                    <img src="@Html.DisplayFor(model => model.image_en)" alt="" class="img-fluid">
                             }else if(ViewBag.data=="jp"){
                                    <img src="@Html.DisplayFor(model => model.image_jp)" alt="" class="img-fluid">
                             }
                         
                 
                            </p>
                        </div>
                          <div class="promotion_detail mt-5">
                          <h1>
                              @if(ViewBag.data=="th"){
                                    @Html.Raw(Model.texteditor_th)
                              }else if(ViewBag.data=="en"){
  @Html.Raw(Model.texteditor_en)
                              }else if(ViewBag.data=="jp"){
                                    @Html.Raw(Model.texteditor_jp)
                              }
                                 
                            </h1>
                            </div>
                    </div>

                </div>
            </div>
        </div>
        </div>
</body>
        <script>
        $(document).ready(function(){
         

$('.btn-plus').click(function(){
    var id=$(this).attr('data');

clickPlus(id);
});

        $.sidebarMenu($('.sidebar-menu'))
   
   
        $.sidebarMenumb($('.sidebar-menu'))

  
        function clickPlus(typeID) {
            if (typeID == 1) {
                $(".career").fadeToggle(200);
                $("#plus1").toggleClass("minus"); 
                $("#active-help1").toggleClass("none-bg");
            } 
            else if (typeID == 2) {
                $("#plus2").toggleClass("minus"); 
                $("#active-help2").toggleClass("none-bg");
            } else {
                $("#plus3").toggleClass("minus"); 
                $("#active-help3").toggleClass("none-bg");
            }
        }
        });
    </script>
    